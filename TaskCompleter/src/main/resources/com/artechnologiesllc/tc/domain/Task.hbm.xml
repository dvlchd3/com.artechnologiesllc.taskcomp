<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.artechnologiesllc.tc.domain">

    <class name="Task" table="task">
        <id name="id" type="java.lang.Long" column="task_id">
            <generator class="native"/>
        </id>
        
        <property name="title" type="string" column="title" not-null="true"/>
        <property name="details" type="string" column="details"/>
        <property name="inputType" type="byte" column="input_type" not-null="true"/>
        <property name="scheduledTime" type="string" column="scheduled_time"/>
        <many-to-one name="problem" class="Problem" column="problem_id"/>
        
        <property name="startDate" type="date" column="start_date"/>
        <property name="endDate" type="date" column="end_date"/>
        <property name="days" type="short" column="days"/>
        <property name="weeks" type="byte" column="weeks"/>
        <property name="months" type="short" column="months"/>
    </class>

</hibernate-mapping>
